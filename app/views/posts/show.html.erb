<p id="notice"><%= notice %></p>


<div class="card">
  <div class="card-show">
    <strong>Titre:</strong>
    <%= @post.title %>
  </div>
</div>

<small>Submitted <%= time_ago_in_words(@post.created_at) %> ago</small>

<div class="card">
  <div class="card-show">
    <strong>Description:</strong>
    <%= @post.description %>
  </div>
</div>

<div class="card">
  <div class="card-show">
    <strong>Categorie:</strong>
    <% if @post.categories.empty?%>
      <strong> Pas de cat√©gorie</strong>
    <%else%>
    <%= @post.categories.map(&:name).join(',' )%>
    <%end%>
  </div>
</div>



<h3>Comments</h3>

<%= form_for [@post, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render(partial: 'comments/comment', collection: @post.comments) %>
</ul>

<div class="links">
  <%= link_to 'Destroy', @post, :method => :delete, :confirm => "Are you sure?" %> |
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
